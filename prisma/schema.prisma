generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id          String   @id @default(uuid())
  artista     String
  album       String
  ano         String
  valor       String
  estadoCapa  String
  estadoMidia String
  observacoes String?
  foto        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ImageAnalysis {
  id        String   @id @default(uuid())
  imageUrl  String
  result    Json
  createdAt DateTime @default(now())
}
